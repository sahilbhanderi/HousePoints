@page
@model HousePointsApp.HousePointsModel
@{
    ViewData["Title"] = "HousePoints";
}

<h2>House Points Scoreboard</h2>
<h4>@Model.DisplayMessage</h4>
@if (Model.HousePoints != null)
{
    <div class="container mb-5 mt-3">
        <table class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>House Name</th>
                    <th>House Points</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < @Model.houses_filled; i++)
                {
                    <tr>
                        <th>@Model.HousePoints[i].house_name</th>
                        <th>@Model.HousePoints[i].house_points</th>
                    </tr>
                }
            </tbody>
            <tfoot></tfoot>
        </table>

    </div>
}

