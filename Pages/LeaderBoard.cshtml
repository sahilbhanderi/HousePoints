@page
@model HousePointsApp.LeaderBoardModel
@{
    ViewData["Title"] = "LeaderBoard";
}

<h2 style="color:#041e42;">LeaderBoard</h2>
<h4 style="color:#42b9f4;">@Model.DisplayMessage</h4>
@if (Model.TopFiveStudent != null) 
{ 
    <div class="container mb-5 mt-3">
        <table class="table table-striped table-bordered" style="width: 100%">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Total Points</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.TopFiveStudent.Count; i++)
                {
                    <tr>
                        <th>@Model.TopFiveStudent[i].first_name @Model.TopFiveStudent[i].last_name</th>
                        <th>@Model.TopFiveStudent[i].total_points</th>
                    </tr>
                }
            </tbody>
            <tfoot></tfoot>
        </table>

    </div>
}


